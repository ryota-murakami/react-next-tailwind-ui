{
  "compilerOptions": {
    "types": ["vitest/globals", "@testing-library/jest-dom"],
    "lib": ["dom", "dom.iterable", "esnext"],
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "strict": true,

    "noEmit": true,
    "noImplicitAny": false,

    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "./**.js",
    "./**.ts",
    "./**.cjs",
    "./**.mjs",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "generators/index.js"
  ],
  "exclude": ["node_modules"]
}
